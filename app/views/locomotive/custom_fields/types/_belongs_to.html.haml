- relation_content_type = f.object.send(field.name.to_sym).try(:content_type).try(:slug)
- relation_link = relation_content_type ? link_to("Go to #{field.label}", edit_content_entry_path(relation_content_type, "$ID"), class: "edit-options-button") : nil

= f.input         :"#{name}_id",
  label:          field.label,
  hint:           field.hint,
  as:             :string,
  wrapper_html:   { class: 'select select2' },
  input_html:     { data: { value: f.object.send(field.name.to_sym).try(:_label), url: content_entries_path(field.class_name_to_content_type.slug, :json), per_page: Locomotive.config.ui[:per_page], edit_link_template: h(relation_link.try(:squish)) } }
